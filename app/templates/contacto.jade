							img(src="img/paso-02.png", alt="Imagen del paso dos para el concurso")
						.col.s12.l6
							img(src="img/paso-03.png", alt="Imagen del paso tres para el concurso")
						.col.s12.l6
							img(src="img/paso-04.png", alt="Imagen del paso cuatro para el concurso")
